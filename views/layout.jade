    // Modal
    #contact-us.contact-popup.modal.fade(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
        h4 Contact me
        form(action='/contact', method='POST')
          p name
          input(type='text', name='name', placeholder='Name', required='true')
          p e-mail
          input(type='email', name='email', placeholder='email', required='true')
          p message
          textarea(name='message', placeholder="Message", required='true')
          .align-center
            input(type='submit', value='write')
    header
      .container
        .logo
          a(href='/', style='color: inherit; text-decoration: none !important;')
            h1 Modern Day Agency
            h4(style="font-family: 'Bad Script', cursive;") Fashion Blog
            //img(src='images/logo.png', alt='logo')
        nav.main-nav
          .responsive-menu
            i.fa.fa-bars
          ul
            if current == "home"
